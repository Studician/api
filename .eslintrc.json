{
  "extends": "strongloop",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "max-len": [2, 120, 8],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "ignore",
        "named": "ignore",
        "asyncArrow": "ignore"
      }
    ]
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  }
}
